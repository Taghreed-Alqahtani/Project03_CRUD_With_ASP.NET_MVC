@model AppointmentModel
@{ 
    var physician = ViewBag.Physician;
}

<center>
    <form asp-action="create" method="post" class=" form-horizontal">
        <div class=" form-group">
            <label asp-for="ID">ID</label>
            <input asp-for="ID" />
        </div>
        <div class=" form-group">
            <label asp-for="Date_Time">Date</label>
            <input asp-for="Date_Time" />
        </div>
        <div class=" form-group">
            <label asp-for="PatientId">Patient</label>
            <input asp-for="PatientId" />
            @*<span asp-validation-for="Description"></span>*@
        </div>
        <div class=" form-group">
            <label asp-for="PhysicianId">Doctor</label>
            <input asp-for="PhysicianId" value="@physician" />
            @*<span asp-validation-for="Price"></span>*@
        </div>
        <div class=" form-group">
            <input type="submit" class=" btn btn-primary" value="submit" />
        </div>
    </form>
</center>