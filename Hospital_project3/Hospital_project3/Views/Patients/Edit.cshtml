@model PatientModel
@{
    var Patient = (PatientModel)ViewData["Patient"];
}
<center>
    <form asp-action="Edit" method="post" class=" form-horizontal">
        <div class=" form-group">
            <label asp-for="NationalID">National ID</label>
            <input asp-for="NationalID" value=@Patient.NationalID />
        </div>
        <div class=" form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" value=@Patient.Name />
        </div>
        <div class=" form-group">
            <label asp-for="Address">Address</label>
            <input asp-for="Address" value=@Patient.Address />
        </div>
        <div class=" form-group">
            <label asp-for="Gender">Gender</label>
            <input asp-for="Gender" value=@Patient.Gender />
        </div>
        <div class=" form-group">
            <input type="submit" class=" btn btn-primary" value="Update" />
        </div>
    </form>
</center>